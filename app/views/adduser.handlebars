{{!-- start content of adduser.handlebars --}}
<form id="signupForm">
    <div class="grid-container">
        <div class="grid-x grid-padding-x">
            <div class="medium-6 cell">
                <label>First Name
                    <input type="text" name="firstName" placeholder="First Name">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Last Name
                    <input type="text" name="lastName" placeholder="Last Name">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Email
                    <input type="email" name="email" placeholder="Email">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Username
                    <input type="text" name="username" placeholder="Username">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Password
                    <input type="password" name="password" placeholder="Password">
                </label>
            </div>
            <div class="medium-6 cell">
                <label>Confirm password
                    <input type="password" name="confirmPassword" placeholder="Password has to be at least 8 characters">
                </label>
            </div>
            <button class="button primary" type="submit">Sign Up</button>
        </div>
    </div>
</form>

<p class="havealogin">Already have a login? <a href="/login">Log in here</a></p>
{{!-- end of content of adduser.handlebars --}}
