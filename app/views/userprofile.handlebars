<div class="grid-container">
  <div class="grid-padding-y grid-y">
    {{!-- Take a quiz card --}}
    <div class="cell small-12 large-6">
      <div class="actionCards">
        <div id="takeQuiz" class="card-section">
          <h3 class="cardTitles">Take a Quiz!</h3>
          <br>
          <p>Enter your access code below to get started:</p>
          <form id="accesscodeForm">
            <input name="accesscode" type="text" placeholder="Access Code">
            <div id="accessCodeError"></div>
            <button class="button primary" type="submit">Go!</button>
          </form>
        </div>
      </div>
    </div>

    {{!-- Create a quiz card --}}
    <div class="cell small-12 large-6">
      <div class="actionCards">
        <div class="card-section">
          <h3 class="cardTitles">Create a Quiz!</h3>
          <br>
          <p>Click to begin creating a shareable quiz:</p>
          <a href="/createquiz"><button class="button primary">Go!</button></a>
        </div>
      </div>
    </div>

    {{!-- Created quizzes table --}}
   
    <div class="cell small-12 large-6 hide" id="quizzesCreated">
      <div class="actionCards">
        <div class="card-section">
          <h3 class="cardTitles">Your Creations</h3>
          <div class="card-section">
            <div class="grid-container" id="quizzesCreatedInfo">
              {{!-- info injected here --}}
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="cell small-12 large-6 hide" id="quizzesTaken">
      <div class="actionCards">
        <div class="card-section">
          <h3 class="cardTitles">Quizzes you've taken</h3>
          <div class="card-section">
            <div class="grid-container" id="quizzesTakenInfo">
              {{!-- info injected here --}}
            </div>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
<script src="/assets/js/takeQuiz.js"></script>
<script src="assets/js/profile.js"></script>


