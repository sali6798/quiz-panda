<form id="addQuestions" class="hide">
  <div class="grid-container">
    <div class="grid-x grid-padding-x">
      <label id="question">Enter your question
        <input type="text" name="question" placeholder="Question">
      </label>
      <label id="answer1">Answer Option 1
        <input type="text" name="answer1" placeholder="Answer">
      </label>
      <label id="answer2">Answer Option 2
        <input type="text" name="answer2" placeholder="Answer">
      </label>
      <label id="answer3">Answer Option 3
        <input type="text" name="answer3" placeholder="Answer">
      </label>
      <label id="answer4">Answer Option 4
        <input type="text" name="answer4" placeholder="Answer">
      </label>
    </div>
    <div class="grid-x grid-padding-x">
      <div class="medium-3 cell">
        <button id="back" type="button">Go Back</button>
      </div>
      <div class="medium-3 cell">
        <button id="save" type="submit">Save Question</button>
      </div>
      <div class="medium-3 cell">
        <button id="finish" type="submit">Finish!</button>
      </div>
      <div class="medium-3 cell">
        <button id="next" type="submit">Next Question</button>
      </div>
    </div>
  </div>
</form>