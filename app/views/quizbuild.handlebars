<div class="grid-container">
  <div class="grid-y grid-padding-y">
    <div class="cell createQuizContainer">
      <form id="createLanding">
        <div class="actionCards">
          <h1 class="cardTitles">Begin Building Your Quiz!</h1>
          <div class="grid-x grid-padding-x">
            <h3 class="cardTitles">Enter the title of your new quiz:</h3>
            <input class="cardTitles" id="quizName" type="text" name="name" placeholder="Name">
          </div>
          <div class="grid-x grid-padding-x">
            <fieldset class="medium-6 cell">
              <legend>Is this quiz retakeable?</legend>
              <input id="yesOption" type="radio" value="yes" name="retakeable" checked><label
                for="yesOption">Yes</label>
              <input id="noOption" type="radio" value="no" name="retakeable"><label for="noOption">No</label>
            </fieldset>
          </div>
          <div class="grid-x cardTitles">
            <button class="button" type="submit">Create Quiz</button></a>
          </div>
        </div>
      </form>
    </div>

      <input class="hide" type="hidden" name="id" data-id="{{ id }}">
    <div class="cell unfinishedQuizContainer hide">
      <div id="unfinishedQuiz">
        <div class="actionCards">
          <div class="card-section">
            <h3 class="cardTitles">Continue a drafted quiz</h3>
            <table>
              <tbody id="stagedTable"></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <form id="addQuestions" class="hide">
    <div class="actionCards">
      <h3 class="cardTitles">Question <span id="questionNumber"></span></h3>
      <div class="grid-y grid-padding-y">
        <div class="grid-x grid-padding-x">
          <div class="cell">
            <label id="question">Enter your question</label>
            <input type="text" name="question" placeholder="Question">
          </div>
        </div>
        <div class="grid-x grid-padding-x">
          <div class="cell small-10">
            <label id="answer1">Answer Option 1</label>
            <input type="text" name="answer1" placeholder="Answer">
          </div>
          <div class="cell small-2 correctAnswerDiv">
            <input id="option1" class="answerOption" type="radio" value="0" name="answers" checked>
            <label for="option1">Correct Answer</label>
          </div>
        </div>
        <div class="grid-x grid-padding-x">
          <div class="cell small-10">
            <label id="answer2">Answer Option 2</label>
            <input type="text" name="answer2" placeholder="Answer">

          </div>
          <div class="cell small-2 correctAnswerDiv">
            <input id="option2" class="answerOption" type="radio" value="1" name="answers">
            <label for="option2">Correct Answer</label>
          </div>
        </div>
        <div class="grid-x grid-padding-x">
          <div class="cell small-10">
            <label id="answer3">Answer Option 3</label>
            <input type="text" name="answer3" placeholder="Answer">
          </div>
          <div class="cell small-2 correctAnswerDiv">
            <input id="option3" class="answerOption" type="radio" value="2" name="answers">
            <label for="option3">Correct Answer</label>
          </div>
        </div>
        <div class="grid-x grid-padding-x">
          <div class="cell small-10">
            <label id="answer4">Answer Option 4</label>
            <input type="text" name="answer4" placeholder="Answer">
          </div>
          <div class="cell small-2 correctAnswerDiv">
            <input id="option4" class="answerOption" type="radio" value="3" name="answers">
            <label for="option4">Correct Answer</label>
          </div>
        </div>
      </div>
      <div class="grid-x grid-padding-x">
        <div class="medium-3 cell">
          <button id="back" class="button" type="submit" value="back">Go Back</button>
        </div>
        <div class="medium-3 cell">
          <button id="save" class="button" type="submit" value="save">Save and Exit</button>
        </div>
        <div class="medium-3 cell">
          <button id="finish" class="button" type="submit" value="finish">Finish!</button>
        </div>
        <div class="medium-3 cell">
          <button id="next" class="button" type="submit" value="next">Next Question</button>
        </div>
      </div>
    </div>
  </form>

  <div id="finalQuizContainer" class="hide">
    <div id="finalQuiz" class="actionCards"></div>
  </div>


  <div id="emailListContainer" class="hide">
    <div class="actionCards">
      <h3 class="cardTitles">Send your quiz to your friends!</h3>
      <form class="cardTitles">
        <div class="grid-x">
          <div class="cell auto">
            <input type="email" name="email" placeholder="Enter an email then click Add!">
          </div>
          <div class="cell shrink">
            <button class="button" type="button" name="add">Add</button>
          </div>
        </div>
      </form>
      <ul id="emailList"></ul>
      <button id="emailQuiz" class="button cardTitles" name="emailQuiz" type="submit">Email Quiz</button>
    </div>
  </div>
</div>
<script src="/assets/js/createEditQuiz.js"></script>